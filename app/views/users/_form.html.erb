<%= form_for @user do |f| %>
	<%= render 'shared/error_messages', object: @user %>

	<%= f.label :username %>
	<%= f.text_field :username %>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<%= f.label :twitter_handle %>
	<%= f.text_field :twitter_handle %>

	<%= f.submit "Save", class: "btn btn-large btn-primary" %>
<% end %>