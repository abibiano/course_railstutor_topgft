<div class="row">
  <div class="span6 offset3">
  	<h1><i class="icon-user"></i> New User</h1>

  	<%= form_for @user do |f| %>
  		<%= render 'shared/error_messages', object: @user %>

  		<%= f.label :username %>
  		<%= f.text_field :username %>

  		<%= f.label :password %>
  		<%= f.password_field :password %>

  		<%= f.submit "Save", class: "btn btn-large btn-primary" %>
  	<% end %>

	</div>
</div>