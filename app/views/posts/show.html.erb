<h2><%= image_tag "gift.png" %><%= link_to @post.title, @post.url %></h2>
<%= link_to "Create a new comment", new_post_comment_path(@post), class: "btn btn-primary" %>

<div class="comments">
	<h5><%= pluralize(@post.comments.count, "comment") %></h5>
	<ul>
		<% @post.comments.each do |comment| %>
			<li>
				<%= comment.content %>
			</li>
		<% end %>
	</ul>
</div>