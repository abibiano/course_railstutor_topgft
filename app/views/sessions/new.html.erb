<div class="row">
  <div class="span6 offset3">
  	<h1><i class="icon-user"></i> Login</h1>

  	<%= form_tag login_path do %>
  
  		<%=  label_tag 'username' %>
  		<%= text_field_tag :username %>

			<%=  label_tag 'password' %>
  		<%= password_field_tag :password %>

  		<%= submit_tag "Login", class: "btn btn-large btn-primary" %>
  	<% end %>

	</div>
</div>